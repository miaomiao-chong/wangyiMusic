/* components/bottom-modal/bottom-modal.wxss */
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(153, 153, 153, 0.76);
}
.panel{
  height: 400rpx;
  width: 100%;
  background-color: #fff;
  position: absolute;
  bottom: 0;
}
.close{
  position: absolute;
  /* 点击的面积变大 */
  padding: 30rpx;
  right: 0;
  top: 0;
}