/* pages/profile/profile.wxss */
@import"./iconfont.wxss";
.header{
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-image: url(https://hbimg.huabanimg.com/f4388857f632e50e16df40b86f5706ad0d1b69446387d5-MFtkr4_fw658/format/webp);
}
.avatarUrl{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid white;
  margin-bottom: 30rpx;
}
.nickName{
  font-weight: 600;
  color: azure;
}
/* 导航界面 */
.nav{
  padding: 30rpx;
  margin-top: 60rpx;
}
.item{
  position: relative;
  display: flex;
  height: 80rpx;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: rgb(238, 241, 243,.5);
  padding: 0 20rpx;
  border-radius: 30rpx;
}
.item .iconfont{
  color: rgb(151, 80, 80);
  font-size: 42rpx;
  margin-right: 30rpx;
}
.content{
  font-size: 40rpx;
  color: rgb(98, 98, 99);
}
.item .icon-xiangyou{
  position: absolute;
  right: 30rpx;
  color: dimgray;
}