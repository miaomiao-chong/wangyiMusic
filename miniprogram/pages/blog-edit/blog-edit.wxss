/* miniprogram/pages/blog-edit/blog-edit.wxss */
.container{
  padding: 0 20rpx;
}
/* 输入框 */
.inputText{
  margin:20rpx 0;
  border: 1rpx solid black;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}
/* 图片和加号的父盒子 */
.imgContainer{
  display: flex;
  flex-wrap: wrap;
}
/* 图片列表 */
.imgItem{
  width: 210rpx;
  height: 210rpx;
  border: 1rpx solid black;
  margin: 13rpx 13rpx 13rpx 0;
  position: relative;
}
/* 删除 */
.delImg{
  padding: 10rpx;
  position: absolute;
  z-index: 1;
  color: aliceblue;
}
/* 添加图片的加号 */
.add{
  width: 210rpx;
  height: 210rpx;
  margin: 13rpx 13rpx 13rpx 0;
  font-size: 100rpx;
  line-height: 210rpx;
  border: 1rpx solid rgba(95, 93, 93, 0.74);
  text-align: center;
  color: rgb(78, 78, 78);
}

/* 底部footer */
.footer{
  width: 100%;
  position: fixed;
  display: flex;
  bottom: 0;
  align-items: center;
}
.count{
  flex: 1;
  text-align: right;

}
.publishBtn{
  margin:0 30rpx;
  font-size: 26rpx;
  background-color: rgb(196, 68, 68);
}